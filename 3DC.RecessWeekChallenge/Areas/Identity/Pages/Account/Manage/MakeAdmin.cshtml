@page
@model _3DC.RecessWeekChallenge.Areas.Identity.Pages.Account.Manage.MakeAdminModel
@{
    ViewData["Title"] = "Make Admin";
    ViewData["ActivePage"] = ManageNavPages.MakeAdmin;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="make_admin_form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button id="make-admin-submit-button" type="submit" asp-page-handler="MakeAdmin" class="btn btn-primary">Make Admin</button>
        </form>
    </div>
</div>